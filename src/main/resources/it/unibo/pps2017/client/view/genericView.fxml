      <Button fx:id="playButton" layoutX="202.0" layoutY="115.0" mnemonicParsing="false" onMouseClicked="#handlePlayMatch" prefHeight="35.0" prefWidth="200.0" style="-fx-border-color: blue; -fx-background-color: yellow; -fx-border-radius: 3;" text="Play" />
      <Button fx:id="viewButton" layoutX="202.0" layoutY="191.0" mnemonicParsing="false" onMouseClicked="#watchMatch" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: yellow; -fx-border-color: blue; -fx-border-radius: 3;" text="View matches" />
