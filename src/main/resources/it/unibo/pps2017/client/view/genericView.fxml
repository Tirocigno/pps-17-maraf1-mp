         <font>
            <Font name="Gill Sans Ultra Bold" size="28.0" />
         </font>
      </Label>
      <Circle fill="#ff2121" layoutX="158.0" layoutY="132.0" radius="14.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fill="#464141" layoutX="158.0" layoutY="208.0" radius="14.0" stroke="BLACK" strokeType="INSIDE" />
      <ListView fx:id="matchesList" layoutX="200.0" layoutY="297.0" prefHeight="175.0" prefWidth="200.0" />
      <Label layoutX="231.0" layoutY="255.0" text="List of matches">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
    <Button fx:id="goButton" layoutX="270.0" layoutY="487.0" mnemonicParsing="false" onMouseClicked="#goViewMatch"
            prefHeight="27.0"
            prefWidth="64.0" style="-fx-background-color: yellow; -fx-border-radius: 3; -fx-border-color: blue;"
            text="Go"/>
</AnchorPane>
